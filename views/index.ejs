<% layout('layouts/boilerplate') %>
<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
  }
  .filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }

  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }

  .filter p{
    font-size: 0.8rem;
  }
</style>
<body>

<div id="filters" class="d-flex flex-wrap justify-content-center">
  <div class="filter" onclick="applyFilter('trending')">
    <i class="fa-solid fa-fire"></i>
    <p>Trending</p>
  </div>
  <div class="filter" onclick="applyFilter('rooms')">
    <i class="fa-solid fa-bed"></i>
    <p>Rooms</p>
  </div>
  <div class="filter" onclick="applyFilter('iconic')">
    <i class="fa-solid fa-mountain-city"></i>
    <p>Iconic Cities</p>
  </div>
  <div class="filter" onclick="applyFilter('mountain')">
    <i class="fa-solid fa-mountain"></i>
    <p>Mountains</p>
  </div>
  <div class="filter" onclick="applyFilter('castle')">
    <i class="fa-solid fa-chess"></i>
    <p>Castles</p>
  </div>
  <div class="filter" onclick="applyFilter('pools')">
    <i class="fa-solid fa-person-swimming"></i>
    <p>Amazing Pools</p>
  </div>
  <div class="filter" onclick="applyFilter('camping')">
    <i class="fa-solid fa-campground"></i>
    <p>Camping</p>
  </div>
  <div class="filter" onclick="applyFilter('farm')">
    <i class="fa-solid fa-cow"></i>
    <p>Farms</p>
  </div>
  <div class="filter" onclick="applyFilter('arctic')">
    <i class="fa-solid fa-snowflake"></i>
    <p>Arctic</p>
  </div>
</div>

  <% if (q) { %>
  <h5 class="mt-3">Search results for: "<%= q %>"</h5>
  <% if (allListings.length === 0) { %>
    <p class="text-muted mt-2">No listings found for "<%= q %>". Try another keyword!</p>
  <% } %>
<% } %>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-3 mt-3">
    <% for (let listing of allListings) { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
          <div class="listing-card">
            <img
              src="<%= listing.image.url%>"
              class="card-img-top"
              alt="listing image"
              style="height: 18rem"
            />
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b><br />
                &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
  <script>
  function applyFilter(filter) {
    if(filter === '' || filter === 'trending'){ 
      window.location.href = '/listings';
      return;
    }
    window.location.href = `/listings?filter=${filter}`;
  }
</script>

</body>
